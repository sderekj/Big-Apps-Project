<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBackground">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/splash_avatars9" />

    <ImageView
        android:id="@+id/name_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/avatar"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginTop="20dp"
        android:alpha=".65"
        android:src="@drawable/name" />


    <EditText
        android:id="@+id/real_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/name_icon"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:text="Shanti Singh"
        android:textSize="15dp" />

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_below="@id/name_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="#D8D8D8" />

    <ImageView
        android:id="@+id/user_name_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/name_icon"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginTop="26dp"
        android:alpha=".65"
        android:src="@drawable/profile" />


    <EditText
        android:id="@+id/profile_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/real_name"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@id/user_name_icon"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:text="shanti_in_queens"
        android:textSize="15dp" />

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_below="@id/user_name_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="#D8D8D8" />


    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/user_name_icon"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginTop="26dp"
        android:alpha=".65"
        android:src="@drawable/location" />


    <EditText
        android:id="@+id/borough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_user_name"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/location_icon"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:text="Queens"
        android:textSize="15dp" />

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_below="@id/location_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="#D8D8D8" />


    <ImageView
        android:id="@+id/quote_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/location_icon"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginTop="26dp"
        android:alpha=".65"
        android:src="@drawable/quote" />


    <EditText
        android:id="@+id/user_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borough"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/location_icon"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:text="Cash me outside..."
        android:textSize="15dp" />

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_below="@id/quote_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="#D8D8D8" />


    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/quote_icon"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginTop="26dp"
        android:alpha=".65"
        android:src="@drawable/email" />


    <EditText
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_quote"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/email_icon"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:text="shanti@gmail.com"
        android:textSize="15dp" />

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_below="@id/email_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:background="#D8D8D8" />

</RelativeLayout>
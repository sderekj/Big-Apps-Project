<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="2dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="#F0F0F0"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_title_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="4dp"
            android:paddingLeft="16dp"
            android:text=" "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/question_description_tv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingTop="4dp"
            android:paddingLeft="16dp"
            android:text=""
            android:textSize="1sp" />


        <TextView
            android:id="@+id/question1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingTop="4dp"
            android:paddingLeft="16dp"
            android:text="Is it ok to feed the pigeons?"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/name_icon"
            android:layout_centerHorizontal="true"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/question2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingTop="4dp"
            android:paddingLeft="16dp"
            android:text="Is the Swiper app legal to use?"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/name_icon"
            android:layout_marginBottom="3dp"
            android:layout_centerHorizontal="true"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/question3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingTop="4dp"
            android:paddingLeft="16dp"
            android:text="Can I bring my pet lion from India?"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="3dp"
            android:layout_below="@id/name_icon"
            android:layout_centerHorizontal="true"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/question4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingTop="4dp"
            android:paddingLeft="16dp"
            android:text="Edibles anyone?"
            android:textSize="16sp" />


    </LinearLayout>
</android.support.v7.widget.CardView>
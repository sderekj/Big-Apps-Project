<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">


    <ImageView
        android:id="@+id/img1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="48dp"
        android:src="@drawable/splash_avatars" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="48dp"
        android:layout_toRightOf="@id/img1"
        android:src="@drawable/splash_avatars2" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@id/img2"
        android:src="@drawable/splash_avatars3" />


    <ImageView
        android:id="@+id/img4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/img1"
        android:layout_marginRight="48dp"
        android:src="@drawable/splash_avatars4" />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/img2"
        android:layout_marginRight="48dp"
        android:layout_toRightOf="@id/img4"
        android:src="@drawable/splash_avatars5" />

    <ImageView
        android:id="@+id/img6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/img3"
        android:layout_toRightOf="@id/img5"
        android:src="@drawable/splash_avatars6" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="175dp"
        android:layout_height="155dp"
        android:layout_below="@id/img5"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nyc101" />

    <ImageView
        android:id="@+id/img7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/img4"
        android:layout_toLeftOf="@id/logo"
        android:layout_marginTop="48dp"
        android:src="@drawable/splash_avatars7" />


    <ImageView
        android:id="@+id/img8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/img4"
        android:layout_toRightOf="@id/logo"
        android:layout_marginTop="48dp"
        android:src="@drawable/splash_avatars8" />


    <ImageView
        android:id="@+id/img9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/img7"
        android:layout_marginTop="40dp"
        android:layout_marginRight="48dp"
        android:src="@drawable/splash_avatars9" />

    <ImageView
        android:id="@+id/img10"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="@dimen/space_below"
        android:layout_marginRight="48dp"
        android:layout_toRightOf="@id/img9"
        android:src="@drawable/splash_avatars10" />

    <ImageView
        android:id="@+id/img11"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/img8"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/img10"
        android:src="@drawable/splash_avatars11" />

    <ImageView
        android:id="@+id/img12"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="@dimen/huge_margin"
        android:src="@drawable/splash_avatars12" />

    <ImageView
        android:id="@+id/img13"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="196dp"
        android:src="@drawable/splash_avatars13" />


</RelativeLayout>

